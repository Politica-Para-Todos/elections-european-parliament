// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Election {
  year  Int   @id @db.SmallInt
  month Int?  @db.SmallInt
  days  Int[] @db.SmallInt
}

model MemberState {
  id                 String              @id @default(uuid())
  name               Country             @unique
  seats              Int?                @db.SmallInt
  electionDates      DateTime[]          @db.Date
  votingAge          Int?                @db.SmallInt
  compulsoryVoting   Boolean?
  candidacyAge       Int?                @db.SmallInt
  constituencies     Int?                @db.SmallInt
  threshold          Int?                @db.SmallInt
  electoralSystem    ElectoralSystem?
  candidateSelection CandidateSelection?
  parties            Party[]
}

model PoliticalGroup {
  id      String                @id @default(uuid())
  name    String
  acronym PoliticalGroupAcronym @unique
  parties Party[]
}

model Party {
  id               String          @id @default(uuid())
  name             String
  acronym          String
  politicalGroup   PoliticalGroup? @relation(fields: [politicalGroupId], references: [id])
  politicalGroupId String?
  MemberState      MemberState?    @relation(fields: [memberStateId], references: [id])
  memberStateId    String?
  candidate        Candidate[]
}

model Candidate {
  id        String    @id @default(uuid())
  shortName String
  fullName  String?
  birthdate DateTime? @db.Date()
  photoUrl  String?
  bio       String?   @db.Text
  party     Party?    @relation(fields: [partyId], references: [id])
  partyId   String?
}

enum Country {
  AUSTRIA
  BELGIUM
  BULGARIA
  CROATIA
  CYPRUS
  CZECHIA
  DENMARK
  ESTONIA
  FINLAND
  FRANCE
  GERMANY
  GREECE
  HUNGARY
  IRELAND
  ITALY
  LATVIA
  LITHUANIA
  LUXEMBOURG
  MALTA
  NETHERLANDS
  POLAND
  PORTUGAL
  ROMANIA
  SLOVAKIA
  SLOVENIA
  SPAIN
  SWEDEN
}

enum ElectoralSystem {
  D_HONDT
  LARGEST_REMAINDER
  MODIFIED_SAINTE_LAGUE
  SAINTE_LAGUE
  SINGLE_TRANSFERABLE_VOTE
}

enum CandidateSelection {
  CLOSED_LIST
  OPEN_LIST
  SEMI_OPEN_LIST
  SINGLE_TRANSFERABLE_VOTE
}

enum PoliticalGroupAcronym {
  EPP
  S_D
  RENEW
  GREENS_EFA
  ECR
  ID
  TL
  NI
}
