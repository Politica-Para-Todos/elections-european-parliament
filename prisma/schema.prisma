generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidate {
  id        Int      @id
  shortName String
  fullName  String?
  birthdate DateTime @db.Date()

  memberStateId Int
  memberState   MemberState @relation(fields: [memberStateId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model MemberState {
  id        Int      @id
  name      String
  startDate DateTime @db.Date()

  candidates Candidate[]
}
