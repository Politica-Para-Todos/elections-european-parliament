{
  "name": "tools-for-democracy",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/Politica-Para-Todos/tools-for-democracy",
  "author": "jopijuco <jpjc@protonmail.com>",
  "license": "MIT",
  "engines": {
    "node": "18.14.2",
    "yarn": "1.22.18"
  },
  "workspaces": {
    "services": [
      "services/*"
    ]
  },
  "scripts": {
    "postinstall": "if [ $IS_EEP ]; then yarn postinstall-elections-european-parliament; elif [ $IS_DN ]; then yarn postinstall-drive-notifications; else echo no environment detected, please set IS_EEP or IS_DN; fi",
    "postinstall-elections-european-parliament": "cd services/elections-european-parliament && yarn install",
    "postinstall-drive-notifications": "cd services/drive-notifications && yarn install"
  }
}
